        </tr>

        <tr>
            <td>
                Subtotal
            </td>
            <td>
                <input type="text" name="txtsubtotal" value=@Model.subtotal />
            </td>
        </tr>
        <tr>
            <td>
                IGV
            </td>
            <td>
                <input type="text" name="txtigv" value=@Model.igv />
            </td>
        </tr>
        <tr>
            <td>
                Total
            </td>
            <td>
                <input type="text" name="txttotal" value=@Model.total />
            </td>
        </tr>
    </table>
